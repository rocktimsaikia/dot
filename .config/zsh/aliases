alias zshrc="source ~/.config/zsh/.zshrc"
alias dot="vi ~/dotfiles/.config"
alias al="cat ~/dotfiles/.config/zsh/aliases"
alias ls="exa -aF"
alias cat="bat"
alias vi="nvim"
alias fd="fdfind"

alias pbcopy="xclip -selection clipboard"
alias ipinfo="curl https://ipinfo.io/"
alias remove="sudo apt-get --purge autoremove"
alias weather="curl https://wttr.in/"
alias tmux="tmux -u"

# Git
alias ga="git add"
alias gaa="git add --all"
alias gs="git status"
alias gc="git commit -m"
alias gam="git commit --amend -m"
alias gamn="git commit --amend --no-edit"
alias gp="git push"
alias gpp="git push -u origin HEAD"
alias gl="git pull"
alias gsh="git switch"
alias gsc="git switch -c"
alias glg="git log"
alias gbm="git branch -m"
alias gbd="git branch -D"

alias gd="git diff"
alias gdp="gh pr diff"
alias gdf="git diff --name-only"
alias gdw="gh pr diff --web"

alias gr="git restore"
alias grs="git restore --staged"
alias grm="git rm -r --cached"
alias gbc="git branch --show-current | pbcopy"

alias gst="git stash push -m"
alias gstlist="git stash list"

# Github
alias gprlist="gh pr list -A rocktimsaikia"
alias gprmerge="gh pr merge"
alias gprcheck="gh pr checks"
alias gprcreate="gh pr create"
alias grview="gh release view"

# Docker
alias dc="docker-compose"

# Codingal
alias cg="vi ~/main/web"
alias cgpy="dc exec api manage.py shell_plus"
alias cgpm="dc exec api manage.py migrate"
