# System
alias a="sudo apt"
alias ainstall="sudo apt install"
alias aupdate="sudo apt update"
alias aupgrade="sudo apt upgrade"
alias aremove="sudo apt-get --purge autoremove"
alias alist="sudo apt list --upgradable"

alias zshrc="source ~/.config/zsh/.zshrc"
alias ls="exa -aF"
alias lsr="ranger"
alias cat="bat"
alias v="nvim"
alias fd="fdfind"

alias pbcopy="xclip -selection clipboard"
alias ipinfo="curl https://ipinfo.io/"
alias remove="sudo apt-get --purge autoremove"
alias weather="curl https://wttr.in/"
alias tmux="tmux -u"

# Git
alias ga="git add"
alias gaa="git add --all"
alias gs="git status"
alias gc="git commit -m"
alias gca="git commit --amend -m"
alias gcan="git commit --amend --no-edit"
alias gp="git push"
alias gpp="git push -u origin HEAD"
alias gl="git pull"
alias gsh="git switch"
alias gsc="git switch -c"
alias glg="git log"
alias gbm="git branch -m"
alias gbd="git branch -D"
alias gcp="git cherry-pick"
alias gcl="git clone"


alias gc="git commit -m"
alias gce="git commit -e"
alias gca="git commit --amend -m"
alias gcae="git commit --amend -e"
alias gcan="git commit --amend --no-edit"

alias gd="git diff"
alias gdh="git diff HEAD"
alias gdp="gh pr diff"
alias gdf="git diff --name-only"
alias gdw="gh pr diff --web"

alias gr="git restore"
alias grs="git restore --staged"
alias grm="git rm -r --cached"
alias gbc="git branch --show-current | pbcopy"

alias gst="git stash push -m"
alias gstlist="git stash list"

# Github
