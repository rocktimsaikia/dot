[user]
	name = Rocktim Saikia
	email = rocktimthedev@gmail.com
[color]
	ui = true
[core]
	editor = nvim
[init]
	defaultBranch = main

# delta config https://dandavison.github.io/delta/get-started.html
[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    side-by-side = true
    show-syntax-themes = light

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default


