# System
alias zshrc="source ~/.zshrc"
alias ls="exa -aF -1"
alias v="nvim"
alias fd="fdfind"

alias pbcopy="xclip -selection clipboard"
alias ipinfo="curl https://ipinfo.io/"
alias remove="sudo apt-get --purge autoremove"
alias weather="curl https://wttr.in/"
alias tmux="tmux -u"

# Git
alias gi="git init"
alias gra="git remote add"
alias ga="git add"
alias gaa="git add --all"
alias gau="git add -u"
alias gs="git status"
alias gc="git commit -m"
alias gp="git push"
alias gpf="git push -f"
alias gpp="git push -u origin HEAD"
alias gl="git pull"
alias glu="git pull upstream"
alias gsh="git switch"
alias gsc="git switch -c"
alias glg="git log"
alias gbm="git branch -m"
alias gbd="git branch -D"
alias gcp="git cherry-pick"
alias clone="git clone"
alias gsa="git stash"
alias gsp="git stash pop"
alias gcln="git clean -df"


alias gce="git commit -e -m"
alias gca="git commit -e --amend -n"
alias gcan="git commit --amend --no-edit -n"
alias gempty="git commit --allow-empty -m"

alias gd="git diff"
alias gds="git diff --staged"
alias gdp="gh pr diff"
alias gdf="git diff --name-only"
alias gdw="gh pr diff --web"

alias gr="git restore"
alias grs="git restore --staged"
alias grm="git rm -r --cached"
alias gbc="git branch --show-current | pbcopy"

alias gst="git stash push -m"
alias gslist="git stash list"

# Github
alias glist="gh pr list -A rocktimsaikia"
alias gmerge="gh pr merge"
alias gcheck="gh pr checks"
alias gcreate="gh pr create --assignee @me"
alias gview="gh release view"
alias gis="gh issue list"

## Files
alias eA="nvim ~/.aliases"
alias eZ="nvim ~/.zshrc"
alias eV='nvim ~/.config/nvim/lua'
alias eK="nvim ~/.config/kitty/kitty.conf"
alias notes="nvim ~/notes.txt"

## Directories
alias ..="cd .."
alias D="cd ~/Downloads"
alias P="cd ~/Pictures"
alias cdot="cd ~/dot"
alias mkcd="source ~/.local/bin/mkd"

# Rofi
alias rofipower="rofi -show power-menu -modi power-menu:rofi-power-menu"

alias sp="pnpx sort-package-json"


# Experimental
alias grammerai="~/grammerai/dist/cli.mjs"

alias bat="bat --plain --theme gruvbox-dark"

alias aic="~/aicommits-v2/dist/cli.mjs"
alias dc="docker compose"
alias conf="cd ~/.config"
alias cz="cz -n && gp"

# This is needed to make ssh work properly with kitty
# without issues like "terminal is not fully functional"
# alias ssh="kitty +kitten ssh"

alias co="gh copilot"
alias chat="firefox https://chat.openai.com/ > /dev/null 2>&1"

# The single quotes are important here so that the command is not executed immediately
alias groot='cd $(git rev-parse --show-toplevel)'
alias browser='firefox > /dev/null 2>&1 &'

alias md="make-dir"
alias greset="rm -rf .git && git init"

